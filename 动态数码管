#include<reg51.h>
void delay(int c)
{
	while(c--);	
}

void main()//            可以同时改变三个延时时长看看
{
	int k,i;
	int guan[16]={0x7f,0xbf,0xdf,0xef,0xf7,0xfb,0xfd,0xfe};	
	int shu[16]={0x3f,0x06,0x5b,0x4f,0x66,0x6d,0x7d,0x07,0x7f,0x6f,0x77,0x7c,0x39,0x5e,0x79,0x71};
	while(1)
	{
  		for(k=0;k<=3;k++)
	{
		P2=guan[k];
	  P3=shu[k];
		P0=shu[k];
		delay(100);
	}	
	delay(100);
	for(i=0;i<=3;i++)
	{
		P2=guan[i+4];
	  P3=shu[i+4];
		P0=shu[i+4];
		delay(100);
	}
}
}
